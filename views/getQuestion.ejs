      })
    }
    
    const overlay = document.querySelector('.modal-overlay')
    overlay.addEventListener('click', toggleModal)
    
    var closemodal = document.querySelectorAll('.modal-close')
    for (var i = 0; i < closemodal.length; i++) {
      closemodal[i].addEventListener('click', toggleModal)
    }

    
    
    
    function deleteQuestionDB (elem) {
        console.log(elem.id)

        document.body.questionDeleteId = elem.id; 

        var xhr = new XMLHttpRequ   est();
        xhr.open("POST", '/deleteEntry', true);
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.send(JSON.stringify({
            questionDeleteId: elem.id
        }));
        var deleteQuestion = document.querySelectorAll('.modal-delete')
        toggleModal(deleteQuestion);

        var delayInMilliseconds = 50;
        setTimeout(function() {
            location.reload();
        }, delayInMilliseconds);
     
    }




    function toggleModal (elem) {
      console.log(elem.id);
      const body = document.querySelector('body')
      var modal = document.querySelector('.modal')
      var deleteButton = document.querySelector('.modal-delete')
      modal.classList.toggle('opacity-0')
      modal.classList.toggle('pointer-events-none')
      body.classList.toggle('modal-active')
      
      deleteButton.id = elem.id
    }
    
     
